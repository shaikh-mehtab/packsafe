<%- include('partials/head') %>

<body data-mobile-nav-style="classic">
  <%- include('partials/header') %>


<section
  class="page-title-center-alignment cover-background top-space-padding"
  style="background-image: url('<%= JSON.parse(globalContent.page_cover)[0] %>')"
>
  <div class="container">
    <div class="row">
      <div class="col-12 text-center position-relative page-title-extra-large">
        <h1
          class="alt-font d-inline-block fw-700 ls-minus-05px text-base-color mb-10px mt-3 md-mt-50px"
        >
          Shopping cart
        </h1>
      </div>
      <div
        class="col-12 breadcrumb breadcrumb-style-01 d-flex justify-content-center"
      >
        <ul>
          <li><a href="demo-decor-store.html">Home</a></li>
          <li>Shopping cart</li>
        </ul>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row align-items-start">
      <div class="col-lg-8 pe-15px md-pe-15px md-mb-50px xs-mb-35px">
        <div class="row align-items-center">
          <div class="col-12">
            <table class="table cart-products">
              <thead>
                <tr>
                  <th scope="col"></th>
                  <th scope="col" class="alt-font fw-600">Product</th>
                  <th scope="col"></th>
                  <th scope="col" class="alt-font fw-600">Price</th>
                  <th scope="col" class="alt-font fw-600">Quantity</th>
                  <th scope="col" class="alt-font fw-600">Total</th>
                </tr>
              </thead>
              <tbody id="bigCart">
                <% if(cart.products) {for(var c=0;c<cart.products.length;c++) { %>
                <tr>
                  <td  class="cart-product-remove">
                    <a id="cart-product-remove" data-id="<%= cart.products[c].id %>"  class="fs-20 fw-500 " ><i class="bi bi-x-circle"></i></a>
                  </td>
                  <td class="product-thumbnail">
                    <a href="/product/<%= cart.products[c].slug %>">
                      <img
                        class="cart-product-image"
                        src="/api/transform/<%= JSON.parse(cart.products[c].data_image)[0] %>"
                        alt
                    /></a>
                  </td>
                  <td class="product-name">
                    <a
                      href="/product/<%= cart.products[c].slug %>"
                      class="text-dark-gray fw-500 d-block lh-initial"
                      ><%= cart.products[c].name %></a
                    >
                  </td>
                  <td class="product-price" data-title="Price"><%= cart.products[c].spl_price %></td>
                  <td class="product-quantity" data-title="Quantity">
                    <div class="quantity">
                      <!-- <button type="button" class="qty-minus">-</button> -->
                      <input
                        class="qty-text "
                        type="text"
                        disabled
                        id="1"
                        value="<%= cart.products[c].quantity %>"
                        aria-label="qty-text"
                      />
                      <!-- <button type="button" class="qty-plus">+</button> -->
                    </div>
                  </td>
                  <td class="product-subtotal" data-title="Total"><%= parseInt(cart.products[c].spl_price *cart.products[c].quantity).toFixed(2)  %></td>
                </tr>
                <% } }%>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row mt-20px">
          <!-- <div class="col-xl-7 col-md-6">
            <div class="coupon-code-panel">
              <input
                type="text"
                class="bg-white border-radius-4px"
                placeholder="Coupon code"
              />
              <a
                href="#"
                class="btn apply-coupon-btn fs-13 fw-600 text-uppercase"
                >Apply</a
              >
            </div>
          </div> -->
          <div class="col-xl-7 col-md-6 sm-mt-15px">
            <a
              href="#"
              id="cart-emptier"
              class="btn btn-small border-1 btn-round-edge btn-transparent-light-gray text-transform-none me-15px"
              >Empty cart</a
            >
            
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div
          class="bg-very-light-gray border-radius-6px p-50px xl-p-30px lg-p-25px"
        >
          <span class="fs-26 alt-font fw-600 text-dark-gray mb-5px d-block"
            >Cart totals</span
          >
          <table class="w-100 total-price-table">
            <tbody>
              <tr class="total-amount">
                <th class="fw-600 text-dark-gray alt-font pb-0">Total</th>
                <td class="pb-0" data-title="Total">
                  <h6 class="totalAmountContainer d-block fw-700 mb-0 text-dark-gray alt-font">
                    <%= parseFloat(cart.totalAmount).toFixed(2) || 0 %>
                  </h6>
                  <span class="fs-14">(Doesn't Includes tax)</span>
                </td>
              </tr>
            </tbody>
          </table>
              <% if(cart.totalCount){%>
                <a
                href="/checkout"
                class="btn btn-base-color btn-extra-large btn-switch-text btn-round-edge btn-box-shadow w-100 text-transform-none mt-30px">
                <span>
                  <span class="btn-double-text"
                    data-text="Proceed to checkout!!">Proceed to Checkout</span>
                </span>
              </a>
              <%} else {%>
                <a
                class="btn btn-medium-gray btn-extra-large btn-switch-text btn-round-edge btn-box-shadow w-100 text-transform-none mt-30px">
                <span>
                  <span class="btn-double-text"
                    data-text="Nothing in Cart!!">Add Something First!!</span>
                </span>
              </a>
              <% } %>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
